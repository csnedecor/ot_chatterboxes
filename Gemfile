source 'https://rubygems.org'

ruby '2.1.4'

gem 'rack'

gem 'sinatra'

# Reloads local server on page refresh (not default for Sinatra)
gem 'shotgun'

# Mail client
gem 'pony'

# Stores environment variables
gem 'dotenv'

# Mailchimp mailing list client
gem 'mailchimp'

# Only need to install this gem
gem 'mailchimp-api'

# Wrapper for the mailchimp-api gem, friendlier syntax
gem 'gibbon'

# Wrapper for the Olark live-chat service 
gem 'rack-olark'

# Production app server
gem 'puma', group: :production
